        <LinearLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:background="@drawable/vip_bg_gradient">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/vip_exclusive"/>


            <TextView
                android:id="@+id/tv_vip"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超级钻石VIP"
                android:textSize="22sp"
                android:textColor="@color/c_ffcf62"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/shape_point_item"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多种专享特权"
                    android:textSize="14sp"
                    android:textColor="@color/c_ffe4a6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <View
                    android:layout_width="5dp"
