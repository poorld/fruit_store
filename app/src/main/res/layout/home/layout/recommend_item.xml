<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/shape_radius_5dp_fff"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/recomm_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/show_apple"/>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/recomm_iv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿尔卑斯蜜汁水蜜桃"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/c_b77f00"
                android:background="@drawable/shape_text_ffde95"
                android:textSize="10sp"
                android:text="产地直销"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/c_b77f00"
                android:background="@drawable/shape_text_ffde95"
                android:textSize="10sp"
                android:text="会员优惠"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/c_b77f00"
                android:background="@drawable/shape_text_ffde95"
                android:textSize="10sp"
                android:text="免配送费"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/c_b77f00"
                android:background="@drawable/shape_text_ffde95"
                android:textSize="10sp"
                android:text="限时优惠"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_market_price"
        android:layout_toLeftOf="@id/tv_preferential_price"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 25.3"
        android:textSize="13sp"
        android:textColor="@color/c_afafaf"/>

    <TextView
        android:id="@+id/tv_preferential_price"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 17.9"
        android:textSize="17sp"
        android:textColor="@color/c_f74c31"/>

</RelativeLayout>