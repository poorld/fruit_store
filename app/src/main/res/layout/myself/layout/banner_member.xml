<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/shape_vip1_gradient"
    android:padding="15dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/member_sfl"
        android:layout_width="80dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/member_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_vip_diamond"/>

        <TextView
            android:layout_gravity="right"
            android:id="@+id/member_name"
            android:layout_toEndOf="@id/member_img"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_6481e5"
            android:layout_marginStart="5dp"
            android:text="钻石会员"/>


    </com.facebook.shimmer.ShimmerFrameLayout>

    <!--vip1 c_a1a1a1-->
    <!--vip2 c_c88b00-->
    <!--vip3 c_5575e3-->
    <TextView
        android:id="@+id/member_tv1"
        android:theme="@style/ThemeVIP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_sfl"
        android:layout_marginTop="15dp"
        android:textColor="@color/c_a1a1a1"
        android:textSize="12sp"
        android:text="购物折扣：95折"/>

    <TextView
        android:id="@+id/member_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_tv1"
        android:layout_marginTop="5dp"
        android:textColor="@color/c_5575e3"
        android:textSize="12sp"
        android:text="充值优惠：95折"/>

    <TextView
        android:id="@+id/member_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/member_tv2"
        android:layout_marginTop="5dp"
        android:textColor="@color/c_5575e3"
        android:textSize="12sp"
        android:text="配送优惠：-2元"/>

    <ImageView
        android:id="@+id/member_logo"
        android:layout_alignParentEnd="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/member_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="13sp"
        android:textColor="@color/c_f95c42"
        android:text="元/月"/>


    <TextView
        android:id="@+id/member_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/member_tv4"
        android:layout_alignBaseline="@id/member_tv4"
        android:layout_marginEnd="15dp"
        android:textColor="@color/colorPrimary"
        android:text="38"
        android:textSize="30sp"
        />

</RelativeLayout>