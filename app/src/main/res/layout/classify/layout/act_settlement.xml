<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/inclued_statusbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_radis_5dp_gradient_2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/c_4669e1"
                android:layout_gravity="center_vertical"
                android:text="商品信息"/>
        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_radius_5dp_fff">


                <ImageView
                    android:id="@+id/settle_product_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/product02"/>

                <LinearLayout
                    android:layout_toEndOf="@id/settle_product_img"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settle_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蜜柚9斤现摘宜昌青皮蜜橘新鲜水果当季孕妇橘子薄皮"
                        android:maxLines="2"
                        android:textColor="@color/c_333333"/>

                    <TextView
                        android:id="@+id/settle_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/c_888888"
                        android:textSize="14sp"
                        android:text="单价: ¥ 55.2"/>

                    <TextView
                        android:id="@+id/settle_product_spec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/c_888888"
                        android:textSize="14sp"
                        android:text="规格: 水果一大箱"/>

                    <TextView
                        android:id="@+id/settle_product_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/c_888888"
                        android:textSize="14sp"
                        android:text="数量: 2"/>

                </LinearLayout>

            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_radis_5dp_gradient_2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/c_4669e1"
                android:text="优惠信息"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_radius_5dp_fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_888888"
                    android:textSize="14sp"
                    android:text="水果优惠"/>

                <TextView
                    android:id="@+id/settle_product_discount"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/c_f95c42"
                    android:text="满23元立减 2元"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_bottom_line" />


            <RelativeLayout
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_888888"
                    android:textSize="14sp"
                    android:text="配送优惠"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/c_f95c42"
                    android:text="-2.3元"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_bottom_line" />


            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_888888"
                    android:textSize="14sp"
                    android:text="总优惠"/>

                <TextView
                    android:id="@+id/total_discount"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/c_f95c42"
                    android:text="- 0.0元"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_radis_5dp_gradient_2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/c_4669e1"
                android:text="收货地址"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/settle_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_radius_5dp_fff">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_address"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_address"
                android:layout_marginStart="15dp"
                android:textColor="@color/c_888888"
                android:textSize="14sp"
                android:text="请选择收货地址"/>

            <TextView
                android:id="@+id/tv_contact_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_888888"
                android:textSize="14sp"
                android:layout_toEndOf="@id/tv_contact_name"
                android:layout_marginStart="15dp"
                android:text=""/>

            <TextView
                android:id="@+id/tv_contact_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/tv_contact_name"
                android:textColor="@color/c_888888"
                android:textSize="14sp"
                android:layout_below="@id/tv_contact_name"
                android:text=""/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_radis_5dp_gradient_2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/c_4669e1"
                android:text="支付方式"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_radius_5dp_fff">

            <LinearLayout
                android:id="@+id/ll_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/settle_payment_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_weixin"/>

                <TextView
                    android:id="@+id/settle_payment_tv"
                    android:layout_marginStart="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="微信支付"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_arrow"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_bottom_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_2a2a2a"
                    android:text="共"/>

                <TextView
                    android:id="@+id/settle_total_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_f95c42"
                    android:text="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_2a2a2a"
                    android:text="件，合计："/>

                <TextView
                    android:id="@+id/settle_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_f95c42"
                    android:text="¥103.6元"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@drawable/shape_radis_5dp_gradient_2"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/c_4669e1"
                android:text="用户留言"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_radius_5dp_fff">

            <EditText
                android:id="@+id/settle_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/c_777777"
                android:background="@null"
                android:text=""/>

        </RelativeLayout>


        <TextView
            android:id="@+id/settle_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/shape_radis_5dp_gradient_2"
            android:textColor="@color/c_ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="支付"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>