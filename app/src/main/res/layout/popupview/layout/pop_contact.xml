        android:layout_height="1dp"
        android:background="@color/c_dddddd" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pop_contact_rv"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </androidx.recyclerview.widget.RecyclerView>



