<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_pop_bg">

        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/c_2c2c2c"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="标题"/>

        <TextView
            android:id="@+id/tv_dialog_msg"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/c_2c2c2c"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="17sp"
            android:text="你好，你已经被踢下线!"/>

        <View
            android:id="@+id/view_pop_line1"
            android:layout_below="@id/tv_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/c_eeeeee"/>

        <LinearLayout
            android:layout_below="@id/view_pop_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_pop_left"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_pop_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_2c2c2c"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:text=""/>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/c_eeeeee"/>

            <RelativeLayout
                android:id="@+id/rl_pop_right"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_pop_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_5866fa"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:text=""/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>