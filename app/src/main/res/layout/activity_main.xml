<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_e16553">

        <RelativeLayout
            android:id="@+id/home_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/home_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/selector_home"/>

            <TextView
                android:id="@+id/home_tv"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/home_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/c_b2b2b2"
                android:text="首页"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classify_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/store_iv"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_store"/>

            <TextView
                android:id="@+id/store_tv"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/store_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/c_b2b2b2"
                android:text="分类"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shopping_cart_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/shopping_cart_iv"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_store"/>

            <TextView
                android:id="@+id/shopping_cart_tv"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/shopping_cart_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/c_b2b2b2"
                android:text="购物车"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myself_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/myself_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_myself"/>

            <TextView
                android:id="@+id/myself_tv"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/myself_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/c_b2b2b2"
                android:text="我的"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>