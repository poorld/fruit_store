<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/inclued_statusbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/shopping_cart_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.jcodecraeer.xrecyclerview.XRecyclerView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/c_ffffff">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_cart_select_all"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:src="@drawable/selector_cart"/>

            <TextView
                android:id="@+id/tv_cart_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_f12707"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="合计: ¥ 799元"/>

        </LinearLayout>




        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/c_ffffff"
            android:textSize="18sp"
            android:background="@color/c_fa7863"/>


    </LinearLayout>

</LinearLayout>