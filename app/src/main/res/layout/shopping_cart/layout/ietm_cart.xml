<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/shape_radius_5dp_fff">

    <ImageView
        android:id="@+id/iv_cart_selected"
        android:layout_marginLeft="15dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_cart_checkbox"/>

    <ImageView
        android:id="@+id/iv_cart_fruit_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/product02"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cart_fruit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:text="蜜柚9斤现摘宜昌青皮蜜橘新鲜水果当季孕妇橘子薄皮"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/c_888888"
            android:textSize="14sp"
            android:text="单价: ¥ 55.2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_cart_spec"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/c_888888"
                android:textSize="14sp"
                android:text="规格: 水果一大箱"/>

            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="x2"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>